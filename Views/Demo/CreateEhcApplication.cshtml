@using Newtonsoft.Json
@{
    string jsonResponse = JsonConvert.SerializeObject(ViewBag.Response, Formatting.Indented);
}
<div class="container">
    <h1 class="govuk-heading-xl">Raising an Export Health Certificate</h1>

    <h4><span class="govuk-tag govuk-tag--green">POST</span><span class="govuk-tag govuk-tag--inactive">https://gateway.trade.defra.gov.uk/trade-sci-exports/uat/v1/ehc-application-example/8293EHC</span></h4>

    <p class="govuk-body">
        Here is an example EHC from the EHC example endpoint, you may edit the payload and submit it.
    </p>
     
    <form asp-controller="Demo" asp-action="MakeApiCallPostEhc">
        <h2 class="govuk-heading-l">Request body</h2>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <textarea class="govuk-textarea code-view" rows="25" name="json">@jsonResponse</textarea>
            </div>
        </div>
        <br/>
        <button class="govuk-button" type="submit">Submit</button>
    </form>
    <a class="govuk-button govuk-button--secondary" asp-action="StartDemo">Start demo again</a>
</div>